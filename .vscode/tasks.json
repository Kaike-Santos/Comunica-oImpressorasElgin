{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile & Run (CMD Externo)",
            "type": "shell",
            "command": "cmd.exe",
            "args": [
                "/c",
                "gcc projeto.c -o projeto.exe && start cmd.exe /k projeto.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "reveal": "always",       
                "panel": "dedicated",
                "clear": true             
            }
        }
    ]
}
